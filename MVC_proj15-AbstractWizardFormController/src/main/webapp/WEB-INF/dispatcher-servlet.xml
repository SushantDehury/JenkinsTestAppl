<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

	<!-- Handler Mapping -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="home.htm">pvc</prop>
				<prop key="register.htm">ec</prop>
			</props>
		</property>
	</bean>

	<!-- Controller Class cfgs -->
	<bean id="pvc"
		class="org.springframework.web.servlet.mvc.ParameterizableViewController">
		<property name="viewName" value="welcome" />
	</bean>
	<bean id="ec" class="com.nt.controller.EmployeeController">
		<property name="commandName" value="empCmd" />
		<property name="commandClass" value="com.nt.command.EmployeeCommand" />
		<property name="pages">
			<array>
				<value>page1form</value>
				<value>page2form</value>
				<value>page3form</value>
			</array>
		</property>
	</bean>


	<!-- View Resolver -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages/" />
		<property name="suffix" value=".jsp"></property>
	</bean>

</beans>
