<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<!-- Controller/Handler class cfg -->
	<bean id="wc" class="com.nt.controller.WelcomeController" />
	<bean id="wmgc" class="com.nt.controller.WishMsgGenerator" />
	<bean id="sau" class="com.nt.controller.ShowAboutUs" />
	<bean id="scu" class="com.nt.controller.ShowContactUs" />

	<!-- HandlerMapping cfg -->
	<bean class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="mappings">
			<props>
				<prop key="home.htm">wc</prop>
				<prop key="result.htm">wmgc</prop>
				<prop key="about.htm">sau</prop>
				<prop key="contact.htm">scu</prop>
			</props>
		</property>
	</bean>

	<!-- ViewResolver cfg -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/pages/" />
		<property name="suffix" value=".jsp" />
	</bean>

</beans>
